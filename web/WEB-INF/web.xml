<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>mypkg.WelcomeServlet</servlet-class>
    </servlet>

    <!-- Note: All <servlet> elements MUST be grouped together and
          placed IN FRONT of the <servlet-mapping> elements -->

    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewRecordServlet</servlet-name>
        <servlet-class>mypkg.ViewRecordsServlet</servlet-class>
    </servlet>

    <!-- Note: All <servlet> elements MUST be grouped together and
          placed IN FRONT of the <servlet-mapping> elements -->

    <servlet-mapping>
        <servlet-name>ViewRecordServlet</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddRecordServlet</servlet-name>
        <servlet-class>mypkg.AddRecordsServlet</servlet-class>
    </servlet>

    <!-- Note: All <servlet> elements MUST be grouped together and
          placed IN FRONT of the <servlet-mapping> elements -->

    <servlet-mapping>
        <servlet-name>AddRecordServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ModifyRecordServlet</servlet-name>
        <servlet-class>mypkg.ModifyRecordsServlet</servlet-class>
    </servlet>

    <!-- Note: All <servlet> elements MUST be grouped together and
          placed IN FRONT of the <servlet-mapping> elements -->

    <servlet-mapping>
        <servlet-name>ModifyRecordServlet</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ModifySearchRecordsServlet</servlet-name>
        <servlet-class>mypkg.ModifySearchRecordsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ModifySearchRecordsServlet</servlet-name>
        <url-pattern>/modifySearch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>mypkg.UpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteRecordServlet</servlet-name>
        <servlet-class>mypkg.DeleteRecordsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteRecordServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DeleteSearchRecordsServlet</servlet-name>
        <servlet-class>mypkg.DeleteSearchRecordsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteSearchRecordsServlet</servlet-name>
        <url-pattern>/deleteSearch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>mypkg.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>mypkg.RegisterServlet</servlet-class>
    </servlet>



    <!-- Note: All <servlet> elements MUST be grouped together and
          placed IN FRONT of the <servlet-mapping> elements -->

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
</web-app>
